        <div style="position:relative;">
            <img src="~/Content/Images/Image_Black.jpg" width="1885" height="50" style="border:2px solid #fff; opacity:0.7" />
            @using (Html.BeginForm("Home", "Home"))
            {
                <button class="zoom" style="position:absolute;
                        bottom:15px;
                        left:20px;
                        border:2px solid #fff;
                        background-color:#131320;
                        color:white;
                        width:100px;
                        height:25px">
                    Home
                </button>
            }

            @using (Html.BeginForm("About", "About"))
            {
                <button class="zoom" style="position:absolute;
                        bottom:15px;
                        left:150px;
                        border:2px solid #fff;
                        background-color:#131320;
                        color:white;
                        width:100px;
                        height:25px">
                    About
                </button>
            }

            @using (Html.BeginForm("Projects", "Projects", FormMethod.Post))
            {
                <div style="position:absolute; width: 125px; height:204px;  bottom:-160px; left:268px; overflow:hidden">
                    <button id="projectsBotton"
                            name="Project"
                            value="Projects"
                            style="position: absolute;
